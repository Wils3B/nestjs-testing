{
  "name": "nest-testing",
  "version": "1.0.0",
  "description": "Nest Application With testing example",
  "license": "GPL 3.0",
  "scripts": {
    "start": "nest start --watch",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^7.0.11",
    "@nestjs/core": "^7.0.11",
    "@nestjs/cqrs": "^7.0.0",
    "@nestjs/platform-express": "^7.0.11",
    "bcrypt": "^5.0.1",
    "cli-color": "^2.0.0",
    "nanoid": "^3.1.22",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.5",
    "stormdb": "^0.4.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.1.5",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.22",
    "@types/lowdb": "^1.0.9",
    "@types/node": "^14.0.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
